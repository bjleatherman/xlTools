Private pPrevTjl As Long
Private pPrevWt As Long
Private pPlqSegLen As Long
Private pPlqWt As Long
Private pPlqGrade As Long
Private pPlqType As Long
Private pStartCol As Long
Private pEndCol As Long

' Constructor
Public Sub Initialize(prevTjl As Long, prevWt As Long, plqSegLen As Long, plqWt As Long, _
                        plqGrade As Long, plqType As Long, startCol As String, endCol As String)
    
    pPrevTjl = prevTjl
    pPrevWt = prevWt
    pPlqSegLen = plqSegLen
    pPlqWt = plqWt
    pPlqGrade = plqGrade
    pPlqType = plqType
    
    startColIndex = ColLetToNumber(startCol)
    endColIndex = ColLetToNumber(endCol)
    
    pStartCol = startColIndex
    pEndCol = endColIndex
    
End Sub
